# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/arm64/configs/(CHANGEME!)

pkgname=linux-samsung-gta3xlwifi
pkgver=4.4.302
pkgrel=0
pkgdesc="Samsung Galaxy Tab A kernel fork"
arch="aarch64"
_carch="arm64"
_flavor="samsung-gta3xlwifi"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="
	bash
	bc
	bison
	devicepkg-dev
	findutils
	flex
	openssl-dev
	perl
	linux-headers
"

# Source
_repository="samsung_kernel_gta3xlwifi"
_commit="29d2fb67a8e80703c51764b9c0ddaad81ef44cd2"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://github.com/starfoxdot64/$_repository/archive/$_commit.tar.gz
	$_config
	fix-check-lxdialog.patch
	allow-building-without-make-mrproper.patch
	da33633a280653ef3282b967ca3a721f7456aeaa.patch
	b94d0bf297fc62af69e0fbe68eaf90dbfd9f1950.patch
	ccfe87650eddcf1a0a8933f648b633553a73798b.patch
	75a3a90a701453a79585e3a1242ef0ad2d7472d3.patch
	linux4.2-gcc10-extern_YYLOC_global_declaration.patch
	ifdef_exynos_fimc_is2.patch
	ifdef_knox_ncm_nf_conntrack_core_c.patch
	ifdef_knox_ncm_sock_c.patch
	ifdef_knox_ncm_udp_c.patch
	decon_fix.patch
	dont_skip_initramfs.patch
	skip_abox_itmon_notifier.patch
	use-pmos-fw-loc.patch
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"

ANDROID_MAJOR_VERSION=r

prepare() {
	make O="$_outdir" ARCH="$_carch" clean
	default_prepare
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS

	objcopy -I binary -O ihex firmware/exynos7885_acpm_fvp.fw firmware/exynos7885_acpm_fvp.fw.ihex

	make O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
}

package() {
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" \
		"$_flavor" "$_outdir"
}

