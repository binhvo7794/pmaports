# Maintainer: Antoine Martin (ayakael) <dev@ayakael.net>
pkgname=pneink-theme
pkgver=1.3
pkgrel=0
pkgdesc="PNEink theme for GTK3"
arch="noarch"
license="MIT"
url="https://github.com/PNDeb/PNEink"
builddir="$srcdir"/PNEink-$pkgver
options="!check" #No test suite"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/PNDeb/PNEink/archive/refs/tags/v1.3.tar.gz
	0001-add-theme-colors.patch
	"

package() {
	mkdir -p "${pkgdir}/usr/share/themes/PNEink"
	cp -r common gnome-shell gtk-3.0 "$pkgdir/usr/share/themes/PNEink"
}
