# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=breeze-icons
pkgver=99999_git20250621
pkgrel=0
_commit="4beb85f0d701f52abd1ff7b30d64d499eefc389d"
pkgdesc="Breeze icon themes"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-or-later"
makedepends="
	extra-cmake-modules
	py3-lxml
	python3
	qt6-qtbase-dev
	samurai
	"
checkdepends="bash"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/frameworks/breeze-icons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-22/breeze-icons-$_commit.tar.xz"

# Several KDE applications use icons not yet present in most themes
# We want to keep the possibility for users to not use the KDE provided
# breeze-icons theme however, as hopefully in the future this situation changes
# Thus let any theme that provides these icons provide "kde-icons" so the user
# retains their ability to choose their preferred theme
provides="kde-icons"
provider_priority=100

replaces="breeze-icons5"

options="!check"
builddir="$srcdir/breeze-icons-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBINARY_ICONS_RESOURCE=ON
	cmake --build build
}

check() {
	ctest --test-dir build -E '(dupe|symlink)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2daf220546490ce62b2f3afd9d5e22e3890cfe349206141c7d623a672b04b574170c469a40cb83dbfff6dd2fe41877c4f8b5f2e6ba837680ae2460a9ceb91595  breeze-icons-4beb85f0d701f52abd1ff7b30d64d499eefc389d.tar.xz
"
