# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=ffmpegthumbs
pkgver=99999_git20250608
pkgrel=0
_commit="231f2a6191bf4bcfbb484047eb057efcf5d71ca1"
# armhf blocked by extra-cmake-modules
# not useful on s390x
arch="all !s390x !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="FFmpeg-based thumbnail creator for video files"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	ffmpeg-dev
	kconfig-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	taglib-dev
	"
_repo_url="https://invent.kde.org/multimedia/ffmpegthumbs.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-22/ffmpegthumbs-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/ffmpegthumbs-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
649bb56a481a8f7d771a54401aebf9f701feb3054f1624b5acf8a3431f95aa027c3bc1525f041685ab9194377e29a0b6c15ba1ea7dfe0bafcb42017e7142805b  ffmpegthumbs-231f2a6191bf4bcfbb484047eb057efcf5d71ca1.tar.xz
"
