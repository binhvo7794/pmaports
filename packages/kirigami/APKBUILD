# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kirigami
pkgver=99999_git20250622
pkgrel=0
_commit="b08d763b547ea7b9b39caefe464158fd2865e040"
pkgdesc="A QtQuick based components set"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
depends="qt6-qtsvg"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kirigami.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-22/kirigami-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-libs $pkgname-lang"

options="!check"
builddir="$srcdir/kirigami-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_EXAMPLES=OFF
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f2f88a565cd3a8778ba0ad4cd04b17178f762f51b9ca2c9fd99954a5e30975781d683c8f810acfa6abedf44e9cc6d0259d37f0671b9f5a47550dde5e42da1685  kirigami-b08d763b547ea7b9b39caefe464158fd2865e040.tar.xz
"
