# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpublictransport
pkgver=99999_git20250623
pkgrel=0
_commit="fc1f9ab47dfcee894c579e1b92d01fdb62e084cd"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/libraries/kpublictransport"
pkgdesc="Library to assist with accessing public transport timetables and other data"
license="BSD-3-Clause AND LGPL-2.0-or-later AND MIT"
depends_dev="
	ki18n-dev
	kirigami-addons-dev
	networkmanager-qt-dev
	protobuf-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	zlib-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kpublictransport.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-24/kpublictransport-$_commit.tar.xz"
options="!check" # Broken for now
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kpublictransport-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
51182c36e73e468997793e5b8dffe28697f009b3f602dd658d7ed4b67fa36ea52443a6a6c6c0222f22ec131a9b6608e73f6abda26dcfeebdef8bf0f01ae277bc  kpublictransport-fc1f9ab47dfcee894c579e1b92d01fdb62e084cd.tar.xz
"
