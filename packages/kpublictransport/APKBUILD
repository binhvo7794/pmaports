# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpublictransport
pkgver=99999_git20250619
pkgrel=0
_commit="75281f1052d0175d0a887178a3816dfac8cc24f8"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/libraries/kpublictransport"
pkgdesc="Library to assist with accessing public transport timetables and other data"
license="BSD-3-Clause AND LGPL-2.0-or-later AND MIT"
depends_dev="
	ki18n-dev
	kirigami-addons-dev
	networkmanager-qt-dev
	protobuf-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	zlib-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kpublictransport.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-19/kpublictransport-$_commit.tar.xz"
options="!check" # Broken for now
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kpublictransport-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
443113dc124e804d2775e6ab41ab8c2bfdd07b5e852410c36f6cd25f06f7ad49ff14b517d03773dc1a549cda1302cfa465ce85e69f8a46cafd58697ae4a49b0e  kpublictransport-75281f1052d0175d0a887178a3816dfac8cc24f8.tar.xz
"
