# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-sdk
pkgver=99999_git20250624
pkgrel=0
_commit="c4e9dd2f0ea1a770ded508b0f6fcef4c9d144c90"
pkgdesc="Applications useful for Plasma Development"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	karchive-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kitemmodels-dev
	kparts-dev
	kservice-dev
	ksvg-dev
	ktexteditor-dev
	kwidgetsaddons-dev
	libplasma-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-sdk.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-24/plasma-sdk-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang $pkgname-zsh-completion"

options="!check"
builddir="$srcdir/plasma-sdk-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# iconmodeltest is broken
	xvfb-run ctest --test-dir build -E "iconmodeltest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a2ba2f7a18cb455d215c880abb56c5ca9844ed57789c471f09d25e715c9f53c81b93975f8ccdf68213dcc6aaf77bc15c29a63caf4b982003583e7eb1acc0e159  plasma-sdk-c4e9dd2f0ea1a770ded508b0f6fcef4c9d144c90.tar.xz
"
