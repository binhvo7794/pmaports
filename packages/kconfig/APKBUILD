# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kconfig
pkgver=99999_git20250617
pkgrel=0
_commit="da889c31e088902723f089673f3be0a70b4560a5"
pkgdesc="Configuration system"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qtdeclarative-dev
	qt6-qttools
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kconfig.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-18/kconfig-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kconfig-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	local _home="${srcdir:?}"/home
	mkdir "$_home"
	chmod 0700 "$_home"
	XDG_RUNTIME_DIR="$_home" \
		HOME="$_home" \
		xvfb-run ctest --test-dir build -E 'kconfig(core-(kconfigtest|kdesktopfiletest|test_kconf_update)|gui-kstandardshortcutwatchertest)'
	rm -rf "$_home"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
d74f88939d0c0489f46738ac3eaf86bc65350c828c9279b365087651c29d994039c473b45ea69d3e25acc788886c80869436818dde2d97e4f1bb69fec2a7d9ab  kconfig-da889c31e088902723f089673f3be0a70b4560a5.tar.xz
"
